-- Instalaciones

npm i -D typescript ts-node

-- Se crea el archivo tsconfig.ts

{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"],
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "module": "nodenext",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
    },
    "include": ["src/**/*.ts"]
}

-- Se crea la carpeta src y se mueve el archivo index cambiando la extensión a ts

-- En el archivo package.json se realizan las siguientes modificaciones

El comando "dev": "src/index.ts"
Solución a posible error "dev": "nodemon --exec ts-node src/index.ts"
Eliminar "type": "module"
